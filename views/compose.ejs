<%- include('partials/header'); -%>


<div class="container container-fluid">
  <h1>Compose</h1>

  <form class="form" action="/compose" method="post">

    <div class="mb-3">
      <label for="Input1" class="form-label">Title</label>
      <input type="text" name="postTitle" class="form-control" id="Input1" autocomplete="off">
    </div>
    <div class="mb-3">
      <label for="Textarea1" class="form-label">Post</label>
      <textarea class="form-control" name="postBody" id="Textarea1" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>

  </form>


<%- include('partials/footer'); -%>
